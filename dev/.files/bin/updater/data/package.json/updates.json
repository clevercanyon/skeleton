{
	"type"            : "module",

	"author"          : {
		"name" : "Clever Canyon",
		"url"  : "https://clevercanyon.com"
	},
	"funding"         : "https://github.com/sponsors/clevercanyon",
	"devDependencies" : {
		"@clevercanyon/skeleton-dev-deps" : "*"
	},

	"cpu"             : [ "x64", "arm64" ],
	"os"              : [ "darwin", "linux" ],
	"engines"         : { "node" : "^18.5.0", "npm" : "^8.19.2" },
	"packageManager"  : "npm@8.19.2",

	"scripts"         : {
		"preview"         : "npx vite preview",
		"dev"             : "npx vite dev --mode=dev",
		"build:dev"       : "npx tsc && npx vite build --mode=dev",
		"build:stage"     : "npx tsc && npx vite build --mode=stage",
		"build:prod"      : "npx tsc && npx vite build --mode=prod",
		"dotfiles:update" : "./dev/.files/bin/update.js"
	},
	"workspaces"      : [ ],
	"config"          : {
		"c10n" : {
			"&" : {
				"dotfiles" : { },
				"build"    : { }
			}
		}
	}
}

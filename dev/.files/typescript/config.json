/**
 * Typescript config file.
 *
 * @note Typescript is not aware of this config file's location.
 * @note Typescript uses the JSONC format (JSON, with comments).
 *
 * @see https://www.typescriptlang.org/tsconfig
 * @see https://vitejs.dev/guide/features.html#typescript-compiler-options
 *
 * @note PLEASE DO NOT EDIT THIS FILE!
 * This entire file will be updated automatically.
 * - Instead of editing here, please review <https://github.com/clevercanyon/skeleton>.
 */
/* eslint-env es2021, node */

{
	"include"         : [
		"../../../src/*",
		"../../../src/**/*"
	],
	"compilerOptions" : {
		"noEmit"                           : false,
		"emitDeclarationOnly"              : true,

		"declaration"                      : true,
		"declarationMap"                   : false,

		"baseUrl"                          : "../../../src",
		"rootDir"                          : "../../../src",
		"declarationDir"                   : "../../../dist/types",

		"target"                           : "es2021",
		"lib"                              : [ "es2021" ],
		"types"                            : [ "vite/client" ],
		"jsx"                              : "react-jsx",

		"module"                           : "es2020",
		"moduleResolution"                 : "node",
		"resolveJsonModule"                : true,

		"esModuleInterop"                  : true,
		"allowSyntheticDefaultImports"     : true,
		"isolatedModules"                  : true,

		"strict"                           : true,
		"alwaysStrict"                     : true,
		"skipLibCheck"                     : true,

		"allowJs"                          : false,
		"checkJs"                          : false,

		"useDefineForClassFields"          : true,
		"forceConsistentCasingInFileNames" : true,

		"paths"                            : {
			"@/@clevercanyon/utilities/u/*" : [ "../node_modules/@clevercanyon/utilities/src/envs/any/*" ],
			"@/@clevercanyon/utilities/c/*" : [ "../node_modules/@clevercanyon/utilities/src/envs/cfw/*" ],
			"@/@clevercanyon/utilities/n/*" : [ "../node_modules/@clevercanyon/utilities/src/envs/node/*" ],
			"@/@clevercanyon/utilities/w/*" : [ "../node_modules/@clevercanyon/utilities/src/envs/web/*" ],

			"@/@clevercanyon/utilities/u:*" : [ "../node_modules/@clevercanyon/utilities/src/envs/any/classes/*" ],
			"@/@clevercanyon/utilities/c:*" : [ "../node_modules/@clevercanyon/utilities/src/envs/cfw/classes/*" ],
			"@/@clevercanyon/utilities/n:*" : [ "../node_modules/@clevercanyon/utilities/src/envs/node/classes/*" ],
			"@/@clevercanyon/utilities/w:*" : [ "../node_modules/@clevercanyon/utilities/src/envs/web/classes/*" ]
		}
	}
}
